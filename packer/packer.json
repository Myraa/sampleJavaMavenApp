{
  "variables": {
  "access_key": "{{env `AWS_ACCESS_ID`}}",
  "secret_key": "{{env `AWS_SECRET_KEY`}}",
  "buildversion": "{{env `BUILD_NUMBER`}}",
  "app_name" : "{{env `appname`}}",
  "release" : "{{env `release`}}"
   },

  "builders": [{
  "type": "amazon-ebs",
  "access_key": "{{user `access_key`}}",
  "secret_key": "{{user `secret_key`}}",
  "region": "{{user `region`}}",
  "source_ami": "{{user `source_ami`}}",
  "instance_type": "{{user `instance_type`}}",
  "ssh_username": "ubuntu",
  "ssh_pty": "true",
  "ami_name": "AMI-LINUX1804-{{user `app_name`}}-{{user `release`}}-{{user `buildversion`}}",

  "tags": {
    "Name": "AMI-myapp-1.0.0-SNAPSHOT-{{user `buildversion`}}",
    "Application_role": "{{user `Application_role`}}",
    "Cluster": "{{user `Cluster`}}",
    "Environment": "{{user `Environment`}}",
    "version": "{{user `release`}}",
    "Owner": "{{user `Owner`}}",
    "Customer": "{{user `Customer`}}",
    "Project": "{{user `Project`}}",
    "Build_Version": "{{user `buildversion`}}",
    "BuildType": "{{user `BuildType`}}",
    "ReleaseVersion": "{{user `release`}}-{{user `BuildType`}}"
    }
    }],

  "provisioners": [{
    "type": "file",
     "source": "/var/lib/jenkins/workspace/sampleJavaMavenApp_master/target/my-app-1.0.0-SNAPSHOT.jar",
    "destination": "/tmp/"
  },
  {
    "type": "shell",
    "inline": [
    "sudo chown ubuntu:ubuntu /tmp/*.jar",
    "sudo cp -p /tmp/my-app-1.0.0-SNAPSHOT.jar /",
    "sudo sleep 10",
    "sudo chmod u+x /my-app-1.0.0-SNAPSHOT.jar",
    "sudo apt update",
    "sudo apt install openjdk-11-jre-headless -y",
    "sudo mkdir /opt/tomcat",
    "sudo cd /opt/tomcat",
    "sudo wget https://downloads.apache.org/tomcat/tomcat-10/v10.0.0-M3/bin/apache-tomcat-10.0.0-M3-deployer.tar.gz",
    "sudo tar -zxvf apache-tomcat-10.0.0-M3-deployer.tar.gz –C /opt/tomcat",
    "sudo groupadd tomcat",
    "sudo useradd -s /bin/false –g tomcat –d /opt/tomcat tomcat",
    "sudo chown –R tomcat webapps/ work temp/ logs",
    "sudo cp -p /my-app-1.0.0-SNAPSHOT.jar /opt/tomcat/WEB-INF/lib"
    ]
  }]
}
